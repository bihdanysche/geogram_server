generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  firstName     String
  lastName      String
  password      String
  createdAt     DateTime @default(now())
  refreshTokens RefreshToken[] 
}

model RefreshToken {
  id         Int      @id @default(autoincrement())
  userId     Int
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  hash       String   @unique
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  @@index([hash])
}
